    "Manan Gandhi <ardumanan@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/otp-forge/otp-forge/issues"
  },
  "homepage": "https://github.com/otp-forge/otp-forge#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@types/node": "^20.14.12",
    "tsup": "^8.2.3",
    "typescript": "^5.5.4"
  }
}
